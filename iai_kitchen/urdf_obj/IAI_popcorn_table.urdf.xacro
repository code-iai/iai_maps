      <geometry>
        <box size="0.52 0.01 0.13"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size=" 0.52 0.01 0.13"/>
      </geometry>
    </collision>
  </link>

  <link name="${name}_back_side">
