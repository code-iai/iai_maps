      <collision>
        <geometry>
          <box size="0.5 0.5 0.015"/>
        </geometry>
      </collision>
    </link>





    <joint name="${name}_front_left_leg_joint" type="fixed">
      <origin xyz="-0.81 -0.27 0.345"/>
      <parent link="${name}_footprint"/>
      <child link="${name}_front_left_leg"/>
